<h2>Favoriler</h2>
<hr />

<div class="row mt-5">
	<div class="col-md-8">
		<div class="text-left">
			<h3 style="margin-top: 0px;">Sepetteki Ürünler</h3>
		</div>

		@if (Model.favoriteItems.Count() > 0)
		{
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Ürün İsim</th>
						<th>Ürün Açıklaması</th>
						<th>Fiyat</th>
						<th></th>

					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.favoriteItems)
					{
						<tr>
							<th>
								<img src="~/@item.ImageUrl" width="80px" />
							</th>
							<td>@item.Name</td>
							<td>@item.Description</td>
							<td>@item.Price.ToString("c")</td>
							<th>

								<div class="d-flex justify-content-between">

									<form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
										<input type="hidden" name="productId" value="@item.ProductId" />
										<div class="input-group mb-3">
											<input type="number" name="Quantity" class="form-control" value="1" min="1" step="1" style="height:27px;width: 60px; font-size: 13px; margin: 0px;" />
											<div class="input-group-append">
												<button type="submit" class="btn btn-primary" style="width:65px;margin: 0px;height:27px;">
													<i class="fas fa-cart-plus"></i>
												</button>
											</div>
										</div>
									</form>
									<form asp-controller="Favorite" asp-action="DeleteFromFavorite" method="post">
										<input type="hidden" name="productId" value="@item.ProductId" />
										<div class="input-group mb-3">
											<div class="input-group-append">
												<button type="submit" class="btn btn-danger btn-sm" style="margin: 0px;height:27px;">
													<i class="fa fa-times"></i>
												</button>
											</div>
										</div>
									</form>
								</div>

							</th>
						</tr>
					}
				</tbody>

			</table>
		}
		else
		{
			<div class="alert alert-warning">
				Favorilenen Ürün Yok!
			</div>

		}

	</div>
</div>


