	<h1>Ürün Düzenle</h1>
	<hr />
	<div class="row" style="display:block">
		<div class="col-mmd-8">

			<div class="alert alert-danger" role="alert">
				Lütfen Ürün Özelliklerini değiştirmeden önce ürün resmini güncelleyiniz !!
			</div>

			<form asp-controller="Admin" asp-action="EditProduct" method="post" enctype="multipart/form-data">
				<input type="hidden" asp-for="ProductId" />

				
				<div class="form-group-row">
					<label asp-for="ProductName" class="col-md-2 col-form-label">Ürün Adı : </label>
					<div class="col-md-10">
						<input asp-for="ProductName" value="@Model.ProductName" class="form-control" />
						<span asp-validation-for="ProductName" class="text-danger"> </span>
					</div>
				
					<div class="form-group-row"> 
						<label asp-for="ImageUrl" class="col-md-2 col-form-label"> Ürün Resmi : </label>
						<div class="col-md-10">
							<input type="hidden" name="ImageUrl" value="@Model.ImageUrl"/>
						
							@if (!string.IsNullOrEmpty(Model.ImageUrl))
							{
								<img src="~/@Model.ImageUrl" alt="Ürün Resmi" style="max-width: 100px; max-height: 100px;"/>
							}
							
							<input type="file"  name="file" value="" />
							<span asp-validation-for="ImageUrl" class="text-danger"> </span>

						</div>


						<div class="form-group-row">
							<label asp-for="ProductCategory" class="col-md-2 col-form-label">Ürün Kategorisi : </label>
							<div class="col-md-10">
								<input asp-for="ProductCategory" value="@Model.ProductCategory" class="form-control" />
								<span asp-validation-for="ProductCategory" class="text-danger"> </span>
							</div>

						<div class="form-group-row">
							<label asp-for="ProductPrice" class="col-md-2 col-form-label"> Ürün Fiyatı :</label>
							<div class="col-md-10">
								<input asp-for="ProductPrice" value="@Model.ProductPrice" class="form-control" />
								<span asp-validation-for="ProductPrice" class="text-danger"> </span>
							</div>

							<div class="form-group-row">
								<label asp-for="Description" class="col-md-2 col-form-label">Ürün Açıklaması :</label>
								<div class="col-md-10">
									<input asp-for="Description" value="@Model.Description" class="form-control" />
									<span asp-validation-for="Description" class="text-danger"> </span>
								</div>
							<div class="form-group-row">
								<label asp-for="UserId" class="col-md-2 col-form-label">Personel Id : </label>
								<div class="col-md-10">
									<input asp-for="UserId" value="@Model.UserId" class="form-control" />
									<span asp-validation-for="UserId" class="text-danger"> </span>
								</div>

								<div class="form-group-row">
									<div class="col-md-10 offset-md-2">
										<button type="submit" value="Save Products" class="btn btn-primary">Ürünü Kaydet</button>
									</div>
								</div>
			</form>

		</div>
