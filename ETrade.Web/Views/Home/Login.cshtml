@using ETrade.Web.Models
@model LoginModel


<!DOCTYPE html>
<html lang="tr">
<head>
	<title>Login Page</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->
	<a href="@Url.Action("Index", "Home")">
		<img src="~/login/images/icons/favicon.ico"  alt="Favicon" width="27" height="27">
	</a>

<!--===============================================================================================-->
	<link href="~/login/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<!--===============================================================================================-->
	<link href="~/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<!--===============================================================================================-->
	<link href="~/login/fonts/iconic/css/material-design-iconic-font.min.css" rel="stylesheet" />
	<!--===============================================================================================-->
	<link href="~/login/vendor/animate/animate.css" rel="stylesheet" />
<!--===============================================================================================-->	
	<link href="~/login/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
<!--===============================================================================================-->
	<link href="~/login/vendor/animsition/css/animsition.min.css" rel="stylesheet" />
<!--===============================================================================================-->
	<link href="~/login/vendor/select2/select2.min.css" rel="stylesheet" />
<!--===============================================================================================-->	
	<link href="~/login/vendor/daterangepicker/daterangepicker.css" rel="stylesheet" />
<!--===============================================================================================-->
	<link href="~/login/css/util.css" rel="stylesheet" />
	<link href="~/login/css/main.css" rel="stylesheet" />
<!--===============================================================================================-->
</head>

<body>

	<div class="limiter">
		<div class="container-login100" style=" "<img src="~/login/images/bg-01.jpg" /> 
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">

				@if (TempData.ContainsKey("SuccessMessage"))
				{
		<div class="alert alert-success">
			
						@TempData["SuccessMessage"]
		</div>
				}
				<form class="login100-form validate-form"  asp-controller="Home" asp-action="Login" method="post">

						@if (TempData.ContainsKey("ErrorMessage"))
							{
			<div class="alert alert-danger">

									@TempData["ErrorMessage"]
			</div>
							}

					@if (TempData["ErrorMessageOne"] != null)
					{
		<div class="alert alert-danger">
							@TempData["ErrorMessageOne"]
		</div>
					}


					<span class="login100-form-title p-b-49">
						Giriş Yap
					</span>

					
				<div class="wrap-input100 validate-input m-b-23">

				<label asp-for="FirstName" class="label-input100">Kullancı Adı : </label>
				<div class="input-100">
					<input asp-for="FirstName" value="@Model.FirstName" class="form-control" />
							<span asp-validation-for="FirstName" class="text-danger"> </span>
						
				</div>
		</div>

					<div class="wrap-input100 validate-input m-b-23">

						<label asp-for="Password" class="label-input100"> Şifre :</label>
						<div class="input-100">
							<input asp-for="Password" type ="password" value="@Model.Password" class="form-control" />
								<span asp-validation-for="Password" class="text-danger"> </span>
						
						</div>
						</div>


					<div class="text-right p-t-8 p-b-31">
						 <a href="@Url.Action("ForgotPassword", "Home")"/> Şifremi Unuttum? </a>
					</div>

					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button class="login100-form-btn">
								Giriş Yap
							</button>
						</div>
					</div>
				
					<div class="flex-c-m">
						<a href="https://tr-tr.facebook.com/" class="login100-social-item bg1">
							<i class="fa fa-facebook"></i>
						</a>

						<a href="https://twitter.com/i/flow/login?redirect_after_login=%2F%3Flang%3Dtr" class="login100-social-item bg2">
							<i class="fa fa-twitter"></i>
						</a>

						<a href="https://www.google.com.tr/?hl=tr" class="login100-social-item bg3">
							<i class="fa fa-google"></i>
						</a>
					</div>

					<div class="flex-col-c p-t-155" style="padding-top :23px;">
   
						<a href=" @Url.Action("SignUp", "Home")" class="txt2">
							VEYA KAYIT OL
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>


<!--===============================================================================================-->
	<script src="~/login/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="~/login/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script src="~/login/vendor/bootstrap/js/popper.js"></script>
@*	<script src="~/login/vendor/bootstrap/js/popper.min.js"></script>*@
	<script src="~/login/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="~/login/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="~/login/vendor/daterangepicker/moment.min.js"></script>
	<script src="~/login/vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
	<script src="~/login/vendor/countdowntime/countdowntime.js"></script>
<!--===============================================================================================-->
	<script src="~/login/js/main.js"></script>


</body>
</html>