    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<style>
    .sub-products li::before {
        content: "• "; /* Nokta nokta simgesi */
    }

    .sub-products {
        display: none;
        list-style: none;
        padding-left: 40px;
        margin-top: 5px;
    }

    .w3-bar-item:hover + .sub-products {
        display: block;
    }
    .navbar-right {
        float: right !important;
        margin-right: -312px;
    }
    .w3-padding-64 {
        padding-top: 0 !important;
        padding-bottom: 64px !important;
    }
    .w3-row-padding {
        padding-top: 0px !important;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between; 
        margin: 0 -8px;  
    }

    .navbar-brand {
        margin-left: -445px;
    }

    .hr {
        margin-top: 24px;
        margin-bottom: 20px;
        border-top: 1px solid #eee;
    }


    .product-card {
        flex-basis: calc(33% - 7px); /*İki kartı yan yana yerleştirir ve boşlukları çıkarır*/
        margin: 5px; /*Kartlar arasındaki boşluğu belirler */
        padding: 20px;
        border: 1px solid #ccc;
        text-align: center;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .product-card img {
            max-width: 100%;
            height: auto;
        }

    .w3-sidebar {
        width: 200px;
        background-color: #f1f1f1;
        position: absolute;
        top: 170px;
    }

  
 


</style>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index","Home") " style=" font-family: 'Sofia' , sans-serif;font-size:24px; font-weight: bold;margin-left: -214px;">E-Commercial</a>
            </div>
            <ul class="nav navbar-nav">
            </ul>
            <form class="navbar-form navbar-left" action="/action_page.php">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search" name="search">
                </div>
                <button type="submit" class="btn btn-default">
                    <p>
                        <a href="#">
                            <span class="glyphicon glyphicon-search"></span>
                        </a>
                    </p>
                </button>
            </form>
            <nav class="navbar">
                <ul class="nav navbar-nav navbar-right" style="font-size :15px;">
                    @if (User.Identity.IsAuthenticated)

                    {
                        <li><a href="@Url.Action("Manage","Home")"> @User.Identity.Name  </a></li>

                        <li><a href="#"><span class="glyphicon glyphicon-bell"></span> </a></li>
                        <li><a href="@Url.Action("Favorites","Home")"><span class="glyphicon glyphicon-heart"></span></a></li>
                        <li><a href="@Url.Action("Basket","Home")"><span class="glyphicon glyphicon-shopping-cart"></span></a></li>
                        <li><a href="@Url.Action("Logout","Home")"><span class="glyphicon glyphicon-log-out"></span></a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("SignUp","Home")"><span class="glyphicon glyphicon-user"></span></a></li>
                        <li><a href="@Url.Action("Login","Home")"><span class="glyphicon glyphicon-log-in"></span></a></li>
                    }


        </div>
    </nav>
    <h1 style="font-family: 'Sofia', sans-serif;  text-align: center;">Banyo Ürünleri</h1>
    <hr />

    
    <div class="w3-sidebar w3-bar-block w3-card" style="width:215px;">
        <h4 style="font-size: 15px;"><strong>Ürün Kategorileri</strong></h4>
        <hr />
        <a href="#" class="w3-bar-item w3-button"><strong>Havlu</strong></a>
        <ul class="sub-products">
			<li>Yüz Havlusu</li>
			<li>El Havlusu</li>
			<li>Plaj Havlusu</li>
			<li>Banyo Havlusu</li>
			<li>Ayak Havlusu</li>
			<li>Havlu Seti</li>

        </ul>
        <a href="#" class="w3-bar-item w3-button"><strong>Banyo Aksesuarları</strong></a>
        <ul class="sub-products">
			<li>Banyo Paspası</li>
			<li>Banyo Seti</li>
			<li>Sıvı Sabunluk</li>

        </ul>
        <a href="#" class="w3-bar-item w3-button"><strong>Bornoz</strong></a>
        <ul class="sub-products">


			<li>Kadın Bornoz</li>
			<li>Erkek Bornoz</li>
			<li>Bornoz Seti</li>

		</ul>

   
    </div>

    <div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px" id="band">
        <div class="w3-row-padding w3-padding-32" style="margin:0 -105px">


            @foreach (var item in Model.Products)//hepsinidb den çekip gösteriyor
            {

                <div class="product-card">
                    <input type="hidden" name="ImageUrl" value="@item.ImageUrl" />

                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="~/@item.ImageUrl" alt="Ürün Resmi" style="max-width: 220; max-height: 150;" />
                    }
                    <div class="w3-container w3-white">
                        <a href="#">@item.ProductName</a>
                        <p class="card-text">@item.ProductPrice &#8378;</p>

                        <div class="card-footer text-center">
                            <a asp-controller="Home" asp-action="Basket" asp-route-id="@item.ProductId">
                                <button class="glyphicon glyphicon-shopping-cart" onclick="document.getElementById('ticketModal').style.display='block'"></button>
                            </a>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.ProductId">
                                <button class="glyphicon glyphicon-search" onclick="document.getElementById('ticketModal').style.display='block'"></button>
                            </a>
                            <a href="@Url.Action("Favorites","Home")">
                                <button class="glyphicon glyphicon-heart" onclick="document.getElementById('ticketModal').style.display='block'"></button>
                            </a>
                        </div>

                    </div>
                </div>

            }
        </div>
    </div>


</body>
</html>
