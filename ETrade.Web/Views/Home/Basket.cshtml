<!--Sepet iconuna tıklanınca yönlendiğim kısım -->


@using ETrade.Web.Models;
@model CartModel

@{
	ViewData["Title"] = "Basket";
}

<h1>Sepetiniz</h1>
<hr />

<div class="row mt-5">
	<div class="col-md-8">
		<div class="text-left">
			<h4>Sepetteki Ürünler</h4>
		</div>


		@if(Model.CartItems.Count>0)
		{
			
		}
		else
		{
			<div class="alert alert-warning"> 
				Sepette Ürün Yok!!
			</div>
		}

		<table class="table table-hover">
			<thead>
				<tr>
					<th> </th>
					<th>Ürün İsmi </th>

					<th>Açıklama</th>

					<th> Adet</th>
					
					<th>Fiyat</th>

					<th>Toplam Fiyat</th>
					<th> </th>

				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model.CartItems)
				{
					<tr>
						<td>
							<img src="~/@item.ImageUrl" width="80"/>
						</td>
						<td>@item.Name</td>
						<td>@item.Description</td>
						<td>@item.Quantity.ToString("c")</td>
						<td>@item.Price</td>
						<td>@(item.Quantity * item.Price)</td>

						<td>
							<form asp-controller="Home" asp-action="DeleteBasket" method="post">
							<input type="hidden" name="productId" value="@item.ProductId"/>
							<button type="submit" class=" btn btn-danger btn-sm">
								<i class="fa fa-times fa-fw"></i>
							</button>
							</form>
						</td>

					</tr>
				}
			</tbody>
			
		</table>
	</div>



	
	<div class="col-md-4">
		@if (Model.CartItems.Count > 0)
		{


			<div class="text-left">
				<h4>Ürün Fiyat Bilgisi</h4>
			</div>

			<table class="table">
				<tbody>
					<tr>
						<th>Toplam Tutar</th>
						<td>@Model.TotalPrice().ToString("c")</td>
					</tr>
					<tr> 
						<th>Shipping</th>
						<td>Free</td>
					</tr>

					<tr>
						<th>Sİpariş Toplamı </th>
						<td>@Model.TotalPrice().ToString("c")</td>
					</tr>

				</tbody>

			</table>

			<div class="text-center">
				<a href="@Url.Action("Index","Home")" class="btn btn-primary">
					<i class=" fa fa-arrow-circle-left fa-fw"></i> Alışverişe Devam Et
				</a>
			</div>

			<div class="text-center">
				<a href="#" class="btn btn-primary">
					<i class=" fa fa-arrow-circle-right fa-fw"></i> Alışverişi Tamamla
				</a>
			</div>

		}
	</div>
	
</div>