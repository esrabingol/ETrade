    <div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px" id="band">
        <div class="w3-row-padding w3-padding-32" style="margin:7 -297px">


            @foreach (var item in Model.Products)//hepsinidb den çekip gösteriyor
            {

                <div class="product-card">
                    <input type="hidden" name="ImageUrl" value="@item.ImageUrl" />

                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="~/@item.ImageUrl" alt="Ürün Resmi" style="max-width: 220; max-height: 150;" />
                    }
                    <div class="w3-container w3-white">
                        <a href="#">@item.ProductName</a>
                        <p class="card-text">@item.ProductPrice &#8378;</p>

                            <div class="card-footer text-center">

                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.ProductId">
                                    <button style="line-height:2" class="glyphicon glyphicon-search" onclick="document.getElementById('ticketModal').style.display='block'">Ürünü İncele</button>
                                </a>
                                <a href="@Url.Action("Favorites","Home")">
                                    <button style="line-height:2" class="glyphicon glyphicon-heart" onclick="document.getElementById('ticketModal').style.display='block'">Favorilere Ekle</button>
                                </a>
                            </div>

                    </div>
                </div>

            }
        </div>
    </div>

        <!--pagination-->
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.PageNumber > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("BedRoom", new { page = 1 })" aria-label="First">
                            <span aria-hidden="true">&laquo;&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("BedRoom", new { page = Model.PageNumber - 1 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="@Url.Action("BedRoom", new { page = i })">@i</a>
                    </li>
                }

                @if (Model.PageNumber < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("BedRoom", new { page = Model.PageNumber + 1 })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("BedRoom", new { page = Model.TotalPages })" aria-label="Last">
                            <span aria-hidden="true">&raquo;&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
        <!--paginationend-->

