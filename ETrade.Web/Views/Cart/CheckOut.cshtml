    <h2 style="text-align:center">ÖDEMEYİ TAMAMLA</h2>
    <hr />
    <div class="row">
    <div class="col-md-7 offset-md-1">
            <h3 class="mb-3">Sipariş Detayları</h3>

            <form action="/" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>İsim</label>
                        <input type="text" name="FirstName" value="" class="form-control">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Soyisim</label>
                        <input type="text" name="LastName" value="" class="form-control">
                    </div>
                </div>

                <div class="mb-3">
                    <label>Adres Bilgisi </label>
                    <textarea name="Address" class="form-control"></textarea>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label>Şehir</label>
                        <input type="text" name="City" value="" class="form-control">
                    </div>

                    <div class="col-md-4 mb-3">
                        <label>Telefon Numarası</label>
                        <input type="text" name="Phone" value="" class="form-control">
                    </div>

                    <div class="col-md-4 mb-3">
                        <label>Mail Adresi</label>
                        <input type="text" name="Email" value="" class="form-control">
                    </div>
                </div>

                <hr class="mb-4" />

                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="save-info">
                    <label class="custom-control-label" for="save-info">Kalıcı Olarak Ekle</label>
                </div>

                <hr class="mb-4" />

                <div class="d-block my-3">
                    <div class="custom-control custom-radio">
                        <input id="credit" name="paymentMethod" type="radio" class="custom-control-input">
                        <label class="custom-control-label" for="credit"> Kredi Kartı </label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input id="credit" name="paymentMethod" type="radio" class="custom-control-input">
                        <label class="custom-control-label" for="eft">EFT</label>
                    </div>

                    <hr class="mb-4" />
                     

                </div>

                <h3 class="mb-3">Ödeme & Kart İşlemleri </h3>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label> Karttaki İsminiz </label>
                        <input type="text" name="CartName" value="" class="form-control">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Kredi Kart Numarası </label>
                        <input type="text" name="CardNumber" value="" class="form-control">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label> Ay </label>
                        <input type="text" name="month" value="" class="form-control">
                    </div>

                    <div class="col-md-4 mb-3">
                        <label>Yıl</label>
                        <input type="text" name="year" value="" class="form-control">
                    </div>

                    <div class="col-md-4 mb-3">
                        <label>CVV</label>
                        <input type="text" name="cvv" value="" class="form-control">
                    </div>
                </div>

                <hr class="mb-4" />

               @* <button type="submit" class="btn btn-primary btn-lg btn-block"> Sepeti Onayla </button>*@
            </form>
        </div>

