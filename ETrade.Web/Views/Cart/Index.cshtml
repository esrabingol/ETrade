<h2>Alışveriş Sepeti</h2>
<hr/>

<div class="row mt-5">
	<div class="col-md-8">
		<div class="text-left">
			<h3 style="margin-top: 0px;">Sepetteki Ürünler</h3>
		</div>

		@if(Model.CartItems.Count()>0)
		{
			<table class="table table-hover">
			<thead>
				<tr>
					<th></th>
					<th>Ürün İsim</th>
					<th>Ürün Açıklaması</th>
					<th>Fiyat</th>
					<th>Adet</th>
					<th>Toplam Tutar</th>
					<th></th>

			    </tr>
			</thead>
			<tbody>
				@foreach(var item in Model.CartItems)
				{
					<tr>
						<th>
							<img src="~/@item.ImageUrl" width="80px"/>
						</th>
						<td>@item.Name</td>
						<td>@item.Description</td>
						<td>@item.Price.ToString("c")</td>
						<td>@item.Quantity</td>
						<td>@((item.Quantity * item.Price).ToString("c"))</td>
						<th>

							<form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
							<input type="hidden" name="productId" value="@item.ProductId">
								<button type="submit" class="btn btn-danger btn-sm">
									<i class="fa fa-times fa-fw"></i>
								</button>
							</form>
							
					    </th>
					</tr>
				}
			</tbody>
			
			</table>
		}
		else
		{
			<div class="alert alert-warning">
				Sepette Ürün Yok!
			</div>

		}

	</div>




	<div class="col-md-4">

	

		@if(Model.CartItems.Count()>0)
		{
			<div class="text-left">
				<h3 style="margin-top: 40px;">Sepet Özeti</h3>
			</div>
			<table class="table">
			<tbody>
				<tr>
					<th>Sepet Tutarı</th>
					<td>@Model.TotalPrice().ToString("c")</td>
				</tr>
				<tr>
					<th>KARGO</th>
					<td style="color:red">100 TL Ve Üzeri Ücretsiz!</td>
				</tr>

				<tr>
					<th>Sipariş Toplamı</th>
					<td>@Model.TotalPrice().ToString("c")</td>
				</tr>
			</tbody>
			
		</table>
		<div class="text-center">
			<a href="@Url.Action("Index","Home")" class="btn btn-primary">
				<i class="fa fa-arrow-circle-left fa-fw"></i> Alışverişe Devam Et!
			</a>

			<a href="@Url.Action("CheckOut","Cart")" class="btn btn-primary">
				<i class="fa fa-arrow-circle-right fa-fw"></i> Ödemeyi Tamamla!
			</a>
			</div>
		}
	

	</div>
</div>
